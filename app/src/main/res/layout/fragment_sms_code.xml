<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.sms_code.SmsCodeFragment">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/message_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/interbold"
        android:text="Sms xabarnomani kiriting"
        android:textColor="#1F313D"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="273dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signin_edittext_background"
        android:hint="123456"
        android:inputType="text"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:padding="2dp"
        android:letterSpacing=".5"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_info"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:text="Davom etish"
        android:backgroundTint="#4387C5"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_password"/>

    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Ro'yhatdan o'tish"
        android:textColor="#777777"
        android:autoSizeMaxTextSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/next_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>